@{
    ViewBag.Title = "Home";
}
<h3> BGL - Commercial Delivery and Technology </h3>
<br />
<div class="container">

    <div class="form-group">
        <label for="txtUserName">User Name:</label>
        <input type="text" class="form-control" id="txtUserName">
    </div>
    <div class="form-group">
        <button class="btn btn-primary" id="btnSubmit" type="submit">Submit</button>
    </div>
    

    <div id="userInfo">
        <h2>User Info</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Login</th>
                    <th>Location</th>
                    <th>Repos Url </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><span id="login"></span></td>
                    <td><span id="location"></span></td>
                    <td> <span id="repos_url"></span> </td>
                </tr>
            </tbody>
        </table>

    </div>

    <div id="userRepositoryInfo">
        <h2>User Repositories </h2>

        <table id="tableUserRepository" class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Stargazers Count </th>
                    <th>Name</th>
                    <th>Description </th>
                    <th>Watchers </th>
                    <th>Collaborators Url</th>
                </tr>
            </thead>
        </table>
    </div>

</div>




